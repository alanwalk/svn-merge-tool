{
    "name": "svn-merge-tool",
    "version": "1.0.0",
    "description": "SVN branch merge CLI tool - merge specific revisions one by one",
    "bin": {
        "svn-merge-tool": "bin/svn-merge-tool.js"
    },
    "files": [
        "bin/",
        "dist/",
        "README.md"
    ],
    "engines": {
        "node": ">=18"
    },
    "scripts": {
        "start": "ts-node src/index.ts",
        "build": "tsc",
        "lint": "tsc --noEmit",
        "prepublishOnly": "npm run lint && npm run build"
    },
    "dependencies": {
        "commander": "^12.1.0",
        "js-yaml": "^4.1.1"
    },
    "devDependencies": {
        "@types/js-yaml": "^4.0.9",
        "@types/node": "^22.0.0",
        "ts-node": "^10.9.2",
        "typescript": "^5.5.0"
    }
}
